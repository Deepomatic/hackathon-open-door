#!/bin/sh
### BEGIN INIT INFO
# Provides:          django
# Required-Start:    $local_fs $network $named $time $syslog
# Required-Stop:     $local_fs $network $named $time $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Description:       django server
### END INIT INFO

DIRECTORY={DIRECTORY}
SCRIPT="source $DIRECTORY/venv/bin/activate; $DIRECTORY/api/manage.py runserver 0.0.0.0:80"
RUNAS=root

PIDFILE=/var/run/django.pid
LOGFILE=/var/log/django.log

start() {
  set -e
  if [ -f /var/run/$PIDNAME ] && kill -0 $(cat /var/run/$PIDNAME); then
    echo 'Service already running' >&2
    return 1
  fi
  echo 'Starting service' >&2
  local CMD="$SCRIPT &> \"$LOGFILE\" & echo \$!"
  touch "$LOGFILE"
  chown $RUNAS:$RUNAS $LOGFILE
  touch "$PIDFILE"
  chown $RUNAS:$RUNAS $PIDFILE
  su -c "$CMD" $RUNAS > "$PIDFILE"
  echo 'Service started' >&2
}

stop() {
  set -e
  if [ ! -f "$PIDFILE" ] || ! kill -0 $(cat "$PIDFILE"); then
    echo 'Service not running' >&2
    return 1
  fi
  echo 'Stopping serviceâ€¦' >&2
  kill -15 $(cat "$PIDFILE") && rm -f "$PIDFILE"
  echo 'Service stopped' >&2
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  retart)
    stop
    start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
esac
